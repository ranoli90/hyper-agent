{
  "name": "hyper-agent",
  "version": "4.0.1",
  "description": "AI-powered browser agent Chrome extension - Personal AI Infrastructure",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt --browser firefox",
    "build": "wxt build",
    "postbuild": "node scripts/ensure-utf8.js",
    "prebuild": "node scripts/fix-source-encoding.js",
    "build:firefox": "wxt build --browser firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip --browser firefox",
    "postinstall": "npx wxt prepare",
    "fix:utf8": "node scripts/ensure-utf8.js",
    "fix:sources": "node scripts/fix-source-encoding.js",
    "validate": "node scripts/prebuild-validation.js",
    "rebuild": "npm run fix:sources && npm run build",
    "test": "playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test:all": "npm run test:unit && npm run test",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.51.0",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.12.7",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.3",
    "globals": "^17.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.18",
    "wxt": "^0.20.18"
  },
  "dependencies": {
    "safe-regex": "^2.1.1",
    "axios": "^1.7.9",
    "crypto-js": "^4.2.0",
    "ethers": "^6.13.4",
    "stripe": "^17.4.0",
    "uuid": "^10.0.0"
  }
}